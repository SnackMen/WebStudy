@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>教师管理系统</title>
    <link href="~/Content/css/staffstyle.css" rel="stylesheet" />
    <link href="~/Content/css/teacher.css" rel="stylesheet" />
    <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="~/Content/js/teacherIndex.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div>
        <div class="div-top">
            <div class="div1-top">
                <label class="label-select">教师网络管理系统</label>
            </div>
        </div>
        <div class="container-fluid">
            <div class="div-left">
                <label class="lab-message">教师信息</label>
                <div class="div-left-title1">
                    <table>
                        <tr>
                            <td width="40px">工号：</td>
                            <td width="50px">@ViewBag.tno</td>
                        </tr>
                        <tr>
                            <td width="40px">姓名：</td>
                            <td id="teacher-name-value">@ViewBag.tname</td>
                        </tr>
                    </table>
                </div>
                <div class="div-left-title2">
                    <table height="40">
                        <tr>
                            <td>
                                @*<a href="javascript:" id="timetable" class="select">课表查询</a>*@
                                @Ajax.ActionLink("课表查询", "TeachQueryTable", "Teacher",new{tname=@ViewBag.tname},new AjaxOptions(){
                               InsertionMode = InsertionMode.InsertAfter,
                               UpdateTargetId = "shownavigation"
                           },new { @id = "timetable", @class = "select" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @*@Html.ActionLink("分数录入", null, null, new { @id = "input", @class = "select" })*@
                            @Ajax.ActionLink("分数录入", "CourseSchedule", "Teacher", new { tname = @ViewBag.tname }, new AjaxOptions()
                            {
                                InsertionMode=InsertionMode.InsertAfter,
                                UpdateTargetId = "schedule-studentclass"
                           },new { @id = "input", @class = "select" })
                            @*<a href="javascript:" id="input" class="select">分数录入</a>*@
                            @*分数录入包含分数更改*@
                        </td>
                    </tr>
                    </table>
                </div>
           </div>
        </div>
        <div class="div-center">
            <div id="queryTimetable">
                <div id="shownavigation">

                </div>
                <div id="showCourse">

                </div>
            </div>
            <div id="inputgrade">
                <div id="schedule-studentclass">

                </div>
               <div id="grade-studentclass">

               </div>
            </div>
        </div>
    </div>
</body>
</html>
