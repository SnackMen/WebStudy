@using StudentRegistrationSystem.Models;
@model List<SelectCourse>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>学生选课界面</title>
    <link href="~/Content/css/student.css" rel="stylesheet" />
    <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="~/Content/js/studentIndex.js"></script>
</head>
<body>
    <div>
        <div class="div-top">
            <div class="div1-top">
                <label class="label-select">学生网络选课系统</label>
            </div>
        </div>
        <div class="container-fluid">
            <div class="div-left">
                <label class="lab-message">学生信息</label>
                <div class="div-left-title1">
                    <table>
                        <tr>
                            <td width="40px">学号：</td>
                            <td width="50px">@TempData["sno"]</td>
                        </tr>
                        <tr>
                            <td width="40px">姓名：</td>
                            <td>@TempData["name"]</td>
                        </tr>
                    </table>
                </div>
                <div class="div-left-title2">
                    <table height="80">
                        <tr>
                            @*<td>@Html.ActionLink("选课", null, null, new
                           {@id = "select",@class="select"})
                            </td>*@
                            <td>
                                <a href="javascript:" id="select" class="select">选课</a>
                            </td>
                           
                        </tr>
                        <tr>
                            <td>
                                @*@Html.ActionLink("退课", null,null,new { @id = "drop", @class = "select" })*@
                                <a href="javascript:" id="drop" class="select">退课</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                               @* @Html.ActionLink("课表查询", null, null, new { @id = "timetable", @class = "select" })*@
                                <a href="javascript:" id="timetable" class="select">课表查询</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                               @* @Html.ActionLink("成绩查询", null, null, new { @id = "grade", @class = "select" })*@
                                <a href="javascript:" id="grade" class="select">成绩查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="div-center">
                <div id="selecourse">
                    <div id="select-cno-message">   
                        @*@using (Html.BeginForm("ajaxIndex", "Student", FormMethod.Post, new { @class = "selectCourseMessage" }))
                        {
                            <div class="form-group">
                                <label class="select-cno">课号</label>
                                @Html.TextBox("cno", null, new { @class = "form-control", @style = "width:300px;" })
