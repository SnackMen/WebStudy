                            <div>
                                <label class="select-cno">课名</label>
                                @Html.TextBox("cname", null, new { @class = "form-control", @style = "width:300px;" }) <br />
                            </div>
                            <button id="submit" type="submit" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder">查询</button>
                        }*@
                        @using (Ajax.BeginForm("TableIndex", "Student", new AjaxOptions
                        {
                            HttpMethod = "Post",
                            UpdateTargetId = "tbClass",
                            InsertionMode = InsertionMode.InsertAfter
                        }))
                        {
                             <div class="form-group">
                                <label class="select-cno">课号</label>
                                @Html.TextBox("cno", null, new { @class = "form-control", @style = "width:300px;" })
                            </div>
                            <div>
                                <label class="select-cno">课名</label>
                                @Html.TextBox("cname", null, new { @class = "form-control", @style = "width:300px;" }) <br />
                            </div>
                            <button id="submit" type="submit" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder">查询</button>
                        }
                    </div>
                    <div id="select-cno-result">
                        <table class="table" id="tbClass">
                            <tr>
                                <th>#</th>
                                <th>课号</th>
                                <th>课名</th>
                                <th>学分</th>
                                <th>所属专业</th>
                                <th>教师姓名</th>
                                <th>上课时间</th>
                                <th></th>
                            </tr>
                           @Html.Partial("TableIndex", Model)
                        </table>
                    </div> 
                </div>
                <div id="dropcouse">
                    <div class="panel panel-default" style="width:900px;">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="font-weight:bolder">
                                当前已选课程
                            </h3>
                        </div>
                        <div class="panel-body">
                            <table class="table">
                                <tr>
                                    <th>#</th>
                                    <th>课号</th>
                                    <th>课名</th>
                                    <th>学分</th>
                                    <th>所属专业</th>
                                    <th>教师姓名</th>
                                    <th>上课时间</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>
                                        <button class="btn btn-primary" id="makesure">退课</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
