@using StudentRegistrationSystem.Models;
@model List<SelectCourse>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>学生选课界面</title>
    <link href="~/Content/css/student.css" rel="stylesheet" />
    <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="~/Content/js/studentIndex.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div>
        <div class="div-top">
            <div class="div1-top">
                <label class="label-select">学生网络选课系统</label>
            </div>
        </div>
        <div class="container-fluid">
            <div class="div-left">
                <label class="lab-message">学生信息</label>
                <div class="div-left-title1">
                    <table>
                        <tr>
                            <td width="40px">学号：</td>
                            <td width="50px">@TempData["sno"]</td>
                        </tr>
                        <tr>
                            <td width="40px">姓名：</td>
                            <td>@TempData["name"]</td>
                        </tr>
                    </table>
                </div>
                <div class="div-left-title2">
                    <table height="80">
                        <tr>
                           
                            <td>
                                @*<a href="javascript:" id="select" class="select">选课</a>*@
                                @Ajax.ActionLink("选课", "SelectCourseIndex", "Student", new AjaxOptions()
                               {
                                   UpdateTargetId = "select-textbox",
                                   InsertionMode = InsertionMode.InsertAfter
                               }, new { @id = "select", @class = "select" })
                            </td>
                           
                        </tr>
                        <tr>
                            <td>
                                @*<a href="javascript:" id="drop" class="select">退课</a>*@
                                @Ajax.ActionLink("退课", "Index", "Student", new { sno = @TempData["sno"] }, new AjaxOptions()
                               {
                                   HttpMethod="Post",
                                   UpdateTargetId = "dropcouse",
                                   InsertionMode = InsertionMode.InsertAfter
                               }, new { @id = "drop", @class = "select"})
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*<a href="javascript:" id="timetable" class="select">课表查询</a>*@
                                 @Ajax.ActionLink("课表查询", "QueryTimeTableIndex", "Student", new AjaxOptions()
                                {
                                    UpdateTargetId="queryTimetable",
                                    InsertionMode = InsertionMode.InsertAfter
                                },new { @id = "timetable", @class = "select" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*<a href="javascript:" id="grade" class="select">成绩查询</a>*@
                                 @Ajax.ActionLink("成绩查询", "GradesIndex", "Student", new AjaxOptions()
                                {
                                    UpdateTargetId = "grades",
                                    InsertionMode=InsertionMode.InsertAfter
                                },new { @id = "grade", @class = "select" })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="div-center">
                <div id="selecourse">
                    <div id="select-cno-message">   
                      @using (Ajax.BeginForm("TableIndex", "Student", new AjaxOptions
                    {
                        HttpMethod = "Post",
                        UpdateTargetId = "select-cno-result",
                        InsertionMode = InsertionMode.InsertAfter
                    }))
                    {
                         <div id="select-textbox">

                         </div>
                        <button id="submit-select" type="submit" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder;display:none">查询</button>
                    }
                    </div>
                    <div id="select-cno-result">
                       
                    </div> 
                </div>
                <div id="dropcouse">
                    
                </div>
                <div id="queryTimetable">
                   
                </div>
                <div id="grades">

                </div>
            </div>
        </div>
    </div>
</body>
</html>
