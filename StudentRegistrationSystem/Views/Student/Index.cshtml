                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>
                                        <button class="btn btn-primary" id="makesure">退课</button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
                <div id="queryTimetable">
                    <div class="panel panel-default" style="width:900px;">
                        <div class="panel-heading">
                            <h2 class="panel-title" style="font-weight:bolder">
                                课程表
                            </h2>
                        </div>
                        <div class="panel-body">
                            <table class="table">
                                <tr>
                                    <th>#</th>
                                    <th>课号</th>
                                    <th>课名</th>
                                    <th>学分</th>
                                    <th>教师姓名</th>
                                    <th>上课时间</th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                    <td>#</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="grades">
                    <div class="panel panel-default" style="width:700px;">
                        <div class="panel-heading">
                            <h2 class="panel-title" style="font-weight:bolder">
                                课程成绩
                            </h2>
                        </div>
                        <div class="panel-body">
                            <table class="table" >
                                <tr>
                                    <th>#</th>
                                    <th>课号</th>
                                    <th>课名</th>
                                    <th>学分</th>
                                    <th>成绩</th>
