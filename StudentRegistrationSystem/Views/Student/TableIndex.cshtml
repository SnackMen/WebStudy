@using StudentRegistrationSystem.Models;
@model List<SelectCourse>
@{
    Layout = null;
    int i = 1;
}

<div id="makesure-div-submit">
    <table class="table">
        @if (Model != null)
        {
            <tr>
                <th>#</th>
                <th>课号</th>
                <th>课名</th>
                <th>学分</th>
                <th>所属专业</th>
                <th>教师姓名</th>
                <th>上课时间</th>
                <th></th>
            </tr>
            foreach (var u in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@u.CNO.Replace(" ", "")</td>
                    <td>@u.CNAME.Replace(" ", "")</td>
                    <td>@u.CREDIT</td>
                    <td>@u.CDEPT.Replace(" ", "")</td>
                    <td>@u.TNAME.Replace(" ", "")</td>
                    <td>@u.WEEK.Replace(" ", "") @u.TIME.Replace(" ", "")</td>
                    <td><button class="btn btn-primary" id="select-makesure">确定</button></td>
                </tr>
                i++;
            }
        }
    </table>
</div>


