@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>管理员界面</title>
    <link href="~/Content/css/staffstyle.css" rel="stylesheet" />
    <link href="~/Content/css/admini.css" rel="stylesheet" />
    <link href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="~/Content/js/adminiIndex.js"></script>
    <script src="~/Content/css/bootstrap-datetimepicker.min.css"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.fr.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
</head>
<body>
    <div>
        <div class="div-top">
            <div class="div1-top">
                <label class="label-select">管理员网络管理系统</label>
            </div>
        </div>
        <div class="container-fluid">
            <div class="div-left">
                <label class="lab-message">管理员信息</label>
                <div class="div-left-title1">
                    <table>
                        <tr>
                            <td width="40px">工号：</td>
                            <td width="50px">@ViewBag.no</td>
                        </tr>
                        <tr>
                            <td width="40px">姓名：</td>
                            <td>@ViewBag.name</td>
                        </tr>
                    </table>
                </div>
                <div class="div-left-title2">
                    <table height="60">
                        <tr>
                            <td>
                                @*@Html.ActionLink("加课", null, null, new { @id = "addcourse", @class = "select" })*@
                                <a href="javascript:" id="addcourse" class="select">加课</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*@Html.ActionLink("课程扩容", null, null, new { @id = "expancourse", @class = "select" })*@
                                <a href="javascript:" id="expancourse" class="select">课程扩容</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*@Html.ActionLink("课程扩容", null, null, new { @id = "expancourse", @class = "select" })*@
                                <a href="javascript:" id="section" class="select">选课时间</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="div-center">
                <div id="add">
                    @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                    {
                        <div id="div-left">
                            <div class="form-group">
                                <label class="insert-cno">课号</label>
                                @Html.TextBox("cno",null, new { @class = "form-control", @style = "width:200px;" })
                            </div>
                            <div>
                                <label class="insert-cno">课名</label>
                                @Html.TextBox("cname",null, new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                            <div>
                                <label class="insert-cno">学分</label>
                                @Html.TextBox("credit", null,new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                            <div>
                                <label class="insert-cno">专业</label>
                                @Html.TextBox("cdept", null,new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                        </div>
                        <div id="div-right">
                            <div class="form-group">
                                <label class="insert-cno">姓名</label>
                                @Html.TextBox("cno",null, new { @class = "form-control", @style = "width:200px;" })
                            </div>
                            <div>
                                <label class="insert-cno">时间</label>
                                @Html.TextBox("cname",null, new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                            <div>
                                <label class="insert-cno">星期</label>
                                @Html.TextBox("credit",null, new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                            <div>
                                <label class="insert-cno">课程容量</label>
                                @Html.TextBox("cdept", null,new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                        </div>
                          
                        <button type="submit" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder">添加</button>
                    }
                </div>
                <div id="expan">
                    <form method="post">
                        <div id="div-left">
                            <div class="form-group">
                                <label class="insert-cno">课号</label>
                                @Html.TextBox("cno-insert", null, new { @class = "form-control", @style = "width:200px;" })
                            </div>
                            <div>
                                <label class="insert-cno">课名</label>
                                @Html.TextBox("cname-insert", null, new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                            <div>
                                <label class="insert-cno">所扩容量</label>
                                @Html.TextBox("cdept-insert", null, new { @class = "form-control", @style = "width:200px;" }) <br />
                            </div>
                        </div>
                        <button type="submit" id="dilatation" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder">扩容</button>
                    </form>
                </div>
                <div id="settime">
                    @using (Ajax.BeginForm("SetTime", "Admin", new AjaxOptions()
                    {
                       
                    }))
                    {
                        <div class="input-append date" id="datetimepicker"  data-date-format="yyyy-mm-dd hh ii">
                            <label class="insert-cno">选课开始时间</label> <br>
                            @*<input class="span2 form-control" size="16" type="text" style="width:200px" />*@
                            @Html.TextBox("begin-time", null, new { @class = "span2 form-control", @style = "width:200px;",size="16",type="text" })
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>
                        <br>
                        <div class="input-append date" id="datetimepicker"  data-date-format="yyyy-mm-dd hh ii">
                            <label class="insert-cno">选课结束时间</label> <br>
                            @*<input class="span2 form-control" size="16" type="text" style="width:200px" />*@
                            @Html.TextBox("over-time", null, new { @class = "span2 form-control", @style = "width:200px;", size = "16", type = "text" })
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div> 
                        <br>
                        <button type="submit" id="submit-time" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder">确定</button>
                        <button type="reset" id="reset-time" class="btn btn-default" style="background: #337ab7;color:white;font-weight:bolder;position:relative;left:88px">重置</button>
                    }
                    <div id="result"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
